<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/address_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="农场西斯"
            android:textColor="#ff1d1d1d"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/address_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="默认地址"
            android:textColor="#ff58bf42"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/address_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="编辑"
            android:textColor="#ff5d5d5d"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/address_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="删除"
            android:textColor="#ff5d5d5d"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/address_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="广东省深圳市宝安福永大道永华大厦602"
        android:textColor="#ff5d5d5d"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/address_phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="手机：13645655654"
        android:textColor="#ff5d5d5d"
        android:textSize="12sp" />

</LinearLayout>