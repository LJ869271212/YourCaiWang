<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#ff58bf42"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/title_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@null"
        android:scaleType="center"
        android:src="@drawable/r" />

    <TextView
        android:id="@+id/title_name"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="买地"
        android:textColor="#ffffffff"
        android:textSize="17.5dp" />

    <LinearLayout
        android:id="@+id/title_cart"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:src="@drawable/shop_cart" >
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:text="购物车"
            android:textColor="#ffffffff" />

        <TextView
            android:id="@+id/title_cart_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:text="(0)"
            android:textColor="#ffff0000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/title_icon_box"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="10dp"
        android:paddingRight="10dp" >

        <com.westars.framework.view.image.RoundImageView
            android:id="@+id/title_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@null"
            android:scaleType="center"
            android:src="@drawable/icon" />

        <ImageView
            android:id="@+id/title_other"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:contentDescription="@null"
            android:scaleType="center"
            android:src="@drawable/u" />
    </LinearLayout>

</LinearLayout>