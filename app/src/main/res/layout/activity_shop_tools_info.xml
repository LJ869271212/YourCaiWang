<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/comment_title_bar_shop" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp" >

                    <com.westars.framework.view.image.SquareImageView
                        android:id="@+id/info_image"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/empty" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10dp" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <ImageButton
                            android:id="@+id/info_sharp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="@color/transparent"
                            android:padding="0dp"
                            android:src="@drawable/sharp" >
                        </ImageButton>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/info_title"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ff404040"
                        android:textSize="22.5sp" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="友菜价："
                            android:textColor="#ff404040"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/info_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffff0000"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="工具分类："
                            android:textColor="#ff404040"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/info_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ff404040"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="数量："
                            android:textColor="#ff404040"
                            android:textSize="15sp" />

                        <Button
                            android:id="@+id/info_number_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="-"
                            android:textColor="#ff404040"
                            android:textSize="15sp" >
                        </Button>

                        <TextView
                            android:id="@+id/info_number"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shop_number_background"
                            android:gravity="center"
                            android:textColor="#ff404040"
                            android:textSize="15sp" />

                        <Button
                            android:id="@+id/info_number_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="+"
                            android:textColor="#ff404040"
                            android:textSize="15sp" >
                        </Button>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="详细介绍"
                android:textColor="#ff666666"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/info_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="#ff666666"
                android:textSize="15sp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#ffeeeeee" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/kf_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:background="@color/transparent"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="客服"
            android:textColor="#ff999999"
            android:textSize="15sp" >
        </Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:background="@color/transparent"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="市场"
            android:textColor="#ff999999"
            android:textSize="15sp" >
        </Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:background="@color/transparent"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="收藏"
            android:textColor="#ff999999"
            android:textSize="15sp" >
        </Button>

        <Button
            android:id="@+id/shop_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ff16c407"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="立即购买"
            android:textColor="#ffffffff"
            android:textSize="15sp" >
        </Button>

        <Button
            android:id="@+id/add_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffee5550"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="加入购物车"
            android:textColor="#ffffffff"
            android:textSize="15sp" >
        </Button>
    </LinearLayout>

</LinearLayout>