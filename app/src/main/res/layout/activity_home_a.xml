<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffffff"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="10dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="20dp" >

            <TextView
                android:id="@+id/maidi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/maidi"
                android:gravity="center_horizontal"
                android:text="买地"
                android:textColor="#ff666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/zhongzi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/zhongzi"
                android:gravity="center_horizontal"
                android:text="种子"
                android:textColor="#ff666666"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/zhongzhi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/zhongzhi"
                android:gravity="center_horizontal"
                android:text="种植"
                android:textColor="#ff666666"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:orientation="horizontal"
            android:padding="20dp" >

            <TextView
                android:id="@+id/icamera"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/icamera"
                android:gravity="center_horizontal"
                android:text="家庭摄像"
                android:textColor="#ff666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/huodong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/huodong"
                android:gravity="center_horizontal"
                android:text="活动"
                android:textColor="#ff666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/youxi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/youxi"
                android:gravity="center_horizontal"
                android:text="游戏"
                android:textColor="#ff666666"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>