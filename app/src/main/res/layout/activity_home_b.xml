<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffffff"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="10dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="20dp" >

            <TextView
                android:id="@+id/youcaiquan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/youcaiquan"
                android:gravity="center_horizontal"
                android:text="友菜圈"
                android:textColor="#ff666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/gongju"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/gongju"
                android:gravity="center_horizontal"
                android:text="农用品"
                android:textColor="#ff666666"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/zhongzi"
                android:gravity="center_horizontal"
                android:text="种子/工具"
                android:textColor="#ff666666"
                android:textSize="12sp"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:orientation="horizontal"
            android:padding="20dp" >

            <TextView
                android:id="@+id/huodong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/huodong"
                android:gravity="center_horizontal"
                android:text="活动"
                android:textColor="#ff666666"
                android:textSize="12sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/youxi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/youxi"
                android:gravity="center_horizontal"
                android:text="游戏"
                android:textColor="#ff666666"
                android:textSize="12sp"
                android:visibility="invisible" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>